@{
				ViewData["Title"] = "Bootstrap Travel Agency";

				string cardcolore(int codice) {
					switch(codice) {
						case 0: return "info";
						case 1: return "success";
						case 2: return "warning";
						default: return "";
					}
				}
			}

			@model List<Viaggio>
			
<div class="container text-center">
    <div class="row">
        <div class="col mt-5 mb-3">
            <h1>Our amazing tours</h1>
            <p class="text-muted">Lorem, ipsum dolor sit amet consectetur adipisicing elit. Debitis, aperiam possimus. Sed dolorum quas, deleniti modi eos amet dolor. Fuga hic repellat nihil quam asperiores reiciendis aut, provident laboriosam.</p>
        </div>
    </div>


	@if (Model.Count == 0)
			{

		<h3>Non ci sono viaggi da visualizzare!</h3>

	}
    else
    {

        <div class="row">
            @foreach (Viaggio viaggio in Model)
			{

				<div class="col-md-4 sm-auto mb-3">
                    <div class="card shadow rounded-0">
                        @if (viaggio.ImagePath.StartsWith("http://") || viaggio.ImagePath.StartsWith("https://"))
                        {
                            <img src="@viaggio.ImagePath" class="card-img-top rounded-0" alt="..." />
                        }
                        else
                        {
                            <img src="~/img/@viaggio.ImagePath" class="card-img-top rounded-0" alt="..." />
                        }

						<div class="card-body bg-@cardcolore(viaggio.ColorCard)">

							<h5 class="card-title text-uppercase m-0 text-white">@viaggio.NomeViaggio</h5>

						</div>

						<div class="card-body border-bottom">

							<p class="card-text text-muted">
								Lorem ipsum dolor, sit amet consectetur adipisicing elit. Voluptas maxime
                                porro maiores voluptates quas asperiores.
                            </p>
                        </div>
                        <div class="card-body">

							<p class="card-text small text-@cardcolore(viaggio.ColorCard)">@viaggio.GiorniViaggio days - @viaggio.NumDestinazioni destinations</p>

							<p class="text-muted"><strong class="text-black">@viaggio.Prezzo €</strong>/person</p>

						</div>

					</div>

				</div>
            }

		</div>
    }

